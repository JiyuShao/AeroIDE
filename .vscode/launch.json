// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension: JS Runner and Debugger",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        // "--profile-temp",
        "--profile=VS Code Extension Debug",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extensions/js-runner-and-debugger",
        "--enable-proposed-api",
        "undefined_publisher.@aeroide/js-runner-and-debugger"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extensions/js-runner-and-debugger/dist/web/**/*.js"
      ],
      "preLaunchTask": "compile-web:packages/extensions/js-runner-and-debugger"
    },
    {
      "name": "Run Web Extension: JS Runner and Debugger",
      "type": "extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "args": [
        // "--profile-temp",
        "--profile=VS Code Extension Debug",
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extensions/js-runner-and-debugger",
        "--extensionDevelopmentKind=web",
        "--enable-proposed-api",
        "undefined_publisher.@aeroide/js-runner-and-debugger"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extensions/js-runner-and-debugger/dist/web/**/*.js"
      ],
      "preLaunchTask": "compile-web:packages/extensions/js-runner-and-debugger"
    },
    {
      "name": "Extension Tests: JS Runner and Debugger",
      "type": "extensionHost",
      "debugWebWorkerHost": true,
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/extensions/js-runner-and-debugger",
        "--extensionDevelopmentKind=web",
        "--extensionTestsPath=${workspaceFolder}/packages/extensions/js-runner-and-debugger/dist/web/test/suite/index"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/extensions/js-runner-and-debugger/dist/web/**/*.js"
      ],
      "preLaunchTask": "watch-web:packages/extensions/js-runner-and-debugger"
    }
  ]
}
