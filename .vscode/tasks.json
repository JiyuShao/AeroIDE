// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: compile-web - extensions/js-runner-and-debugger",
      "path": "extensions/js-runner-and-debugger",
      "type": "npm",
      "script": "compile-web",
      "group": {
        "kind": "build"
      },
      "problemMatcher": ["$ts-webpack", "$tslint-webpack"]
    },
    {
      "label": "npm: watch-web - extensions/js-runner-and-debugger",
      "path": "extensions/js-runner-and-debugger",
      "type": "npm",
      "script": "watch-web",
      "group": "build",
      "isBackground": true,
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"]
    }
  ]
}
