{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^dev"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "fix": {
      "outputs": []
    },
    "clean": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**/*"],
      "dependsOn": ["build"],
      "cache": false
    },
    "test:coverage": {
      "dependsOn": ["build"]
    }
  }
}
